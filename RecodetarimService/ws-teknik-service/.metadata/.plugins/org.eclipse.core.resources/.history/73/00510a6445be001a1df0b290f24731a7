package com.techie.recodetarim;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.techie.recodetarim.domain.entities.Forms;
import com.techie.recodetarim.domain.repositories.FormsRepository;

@SpringBootApplication
public class RecodetarimServiceApplication implements CommandLineRunner {
	@Autowired
	private FormsRepository formsRepository;
	
	public static void main(String[] args) {
		SpringApplication.run(RecodetarimServiceApplication.class, args);
	}

	@SuppressWarnings("unused")
	@Override
	public void run(String... args) throws Exception {
		Forms form = new Forms(1l, 2l, "name", "jasperFormName");
		formsRepository.save(form);
		
		List<Forms> forms = formsRepository.findAll();
		Optional<Forms> formRetrieved = formsRepository.findById(1l);
		
	}
}
